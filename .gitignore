cd /var/www/bewertung

# 1) .gitignore anlegen (komplett)
tee .gitignore > /dev/null <<'GIT'
# OS / Editor
.DS_Store
Thumbs.db
.vscode/
.idea/

# (Optional) Dependencies/Builds
vendor/
node_modules/

# Runtime (nicht versionieren)
storage/sessions/*
!storage/sessions/.gitkeep
storage/logs/
storage/*.log
public/uploads/

# Secrets
config/config.php
.env
GIT

# 2) Platzhalter fÃ¼r Sessionsordner (damit der Ordner im Repo bleibt)
mkdir -p storage/sessions
touch storage/sessions/.gitkeep
chmod 664 storage/sessions/.gitkeep

# 3) Repo neu initialisieren und ersten Commit erstellen
git init
git config --local user.name "dev"
git config --local user.email "dev@local"
git add .
git commit -m "init: clean repo; ignore secrets & runtime; current working app state"
# Runtime & secrets
/storage/
/storage/**
/config/config.php

# Backups & local dumps
*.bak-*
*.tgz
*.sql

# System files
.DS_Store
Thumbs.db
